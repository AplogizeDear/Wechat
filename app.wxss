/*修改顶层节点的样式*/
page {
  display: block;
  min-height: 100%;
  background-color: #fff;
  font-size:26rpx;
  float:left;
}
.slider {
    display: block;
    height: 400rpx;
}
.slider .slide-image{
    width: 100%;
    height: 100%;
}
.slider .default-slide-image{
    width: 60rpx!important;
    height: 60rpx!important;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.clearfix::after{
    content: "";
    display: table!important;
    clear: both;
}
/* 登录页面公共样式 */
/* pages/login/login.wxss */
.n_login{
  width: 640rpx;
  overflow: hidden;
  margin: 80rpx 54rpx;
}
.n_login .new-login {
  height: 86rpx;
  margin-bottom: 54rpx;
}
.new-login image{
  width:322rpx;
  height:86rpx;
}
.n_login_notice{
  overflow: hidden;
  margin-bottom: 70rpx;
  font-size: 30rpx;
}
.n_login_notice text{
  font-size: 30rpx;
}
.n_login_phone{
  width: 100%;
  height: 88rpx;
  margin-bottom: 28rpx;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}
n_login_all {
    width: 100%;
    height: 50rpx;
}
.n_login_p {
    display: block;
    float: left;
    width: 130rpx;
    line-height: 50rpx;
    padding-left: 30rpx;
}
.n_login_all input {
    border: none;
    height: 100%;
    width: 460rpx;
    padding-left: 20rpx;
    float: right;
    background: #f5f5f5;
}
.n_login_btn{
     width: 100%;
    height: 90rpx;
    background: #dad9e2;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #fff;
}
.n_login_p image{
  width:34rpx;
  height:24rpx;
  margin-top:8rpx;
}
/* 注册页面相关 */
.n_verifycode {
    width: 100%;
    overflow: hidden;
}
.get-identify-code {
    float: right;
    height: 90rpx;
    width: 200rpx;
    background: #ed3269;
    color: #fff;
    font-size: 26rpx;
    padding-top:8rpx;
}
.form_btn_color {
    background: -webkit-linear-gradient(30deg, #ed3367, #f05e3f);
}
button[type=primary] {
    background:#ed3367;
}
button[disabled][type=primary] {
    background:gray;
}
.n_login_phone button.get-identify-code.button-hover{
  background-color:none;
}